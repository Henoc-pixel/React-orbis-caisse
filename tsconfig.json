{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
    ,
    "jsx": "react-jsx", // ou "react" si vous utilisez une version plus ancienne de React
    "lib": ["dom", "esnext"], // Ajoutez "dom" pour les types DOM
    "module": "esnext",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  
}
